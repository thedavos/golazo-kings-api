# API Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api
API_VERSION=1
DEFAULT_API_VERSION=1
HOST=golazo-kings-api.example.com

# Database Configuration
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}
DB_ROOT_PASSWORD={DB_ROOT_PASSWORD}
DB_DATABASE=${DB_DATABASE}
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=${REDIS_PORT}
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_PREFIX=golazo:

# AWS S3 (para almacenamiento de imágenes)
AWS_S3_BUCKET=${AWS_BUCKET}
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_KEY}
AWS_REGION=${AWS_REGION}

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/golazo-kings/app.log

# CORS
CORS_ORIGIN=https://golazo-kings.com,https://admin.golazo-kings.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Swagger
SWAGGER_ENABLED=false
SWAGGER_TITLE=GolazoKings API
SWAGGER_DESCRIPTION=API para la plataforma de simulación GolazoKings
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs

# Backblaze B2 Credentials (S3 Compatible API)
B2_ACCESS_KEY_ID=${B2_ACCESS_KEY_ID}
B2_SECRET_ACCESS_KEY=${B2_SECRET_ACCESS_KEY}
B2_BUCKET_NAME=${B2_BUCKET_NAME}
B2_ENDPOINT=${B2_ENDPOINT}
B2_REGION=${B2_REGION}
B2_PUBLIC_URL_BASE=${B2_PUBLIC_URL_BASE}

# Admin
KINGS_LEAGUE_BASE_URL=https://kingsleague.pro/es