# API Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=api
API_VERSION=1
DEFAULT_API_VERSION=1
HOST=golazo-kings-api.example.com

# Database Configuration
DB_HOST=${DB_PROD_HOST}
DB_PORT=${DB_PROD_PORT}
DB_USERNAME=${DB_PROD_USERNAME}
DB_PASSWORD=${DB_PROD_PASSWORD}
DB_DATABASE=${DB_PROD_DATABASE}
DB_SYNCHRONIZE=false
DB_LOGGING=false

# JWT Configuration
JWT_SECRET=${JWT_PROD_SECRET}
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=${JWT_REFRESH_PROD_SECRET}
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=${REDIS_PROD_HOST}
REDIS_PORT=${REDIS_PROD_PORT}
REDIS_PASSWORD=${REDIS_PROD_PASSWORD}
REDIS_PREFIX=golazo:

# AWS S3 (para almacenamiento de imágenes)
AWS_S3_BUCKET=${AWS_PROD_BUCKET}
AWS_ACCESS_KEY_ID=${AWS_PROD_ACCESS_KEY}
AWS_SECRET_ACCESS_KEY=${AWS_PROD_SECRET_KEY}
AWS_REGION=${AWS_PROD_REGION}

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=/var/log/golazo-kings/app.log

# CORS
CORS_ORIGIN=https://golazo-kings.com,https://admin.golazo-kings.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Swagger
SWAGGER_ENABLED=false
SWAGGER_TITLE=GolazoKings API
SWAGGER_DESCRIPTION=API para la plataforma de simulación GolazoKings
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs