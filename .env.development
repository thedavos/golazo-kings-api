# API Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api
API_VERSION=1
DEFAULT_API_VERSION=1
HOST=localhost

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=golazo_kings_dev
DB_USERNAME=golazo_davos282
DB_PASSWORD=golazo_password
DB_ROOT_PASSWORD=root_password
DB_SYNCHRONIZE=true
DB_LOGGING=true

# JWT Configuration
JWT_SECRET=dev_secret_key_change_in_production
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=dev_refresh_secret_key_change_in_production
JWT_REFRESH_EXPIRATION=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_PREFIX=golazo_dev:

# AWS S3 (para almacenamiento de imágenes)
AWS_S3_BUCKET=golazo-kings-dev
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_REGION=us-east-1

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/development.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Swagger
SWAGGER_ENABLED=true
SWAGGER_TITLE=GolazoKings API (Development)
SWAGGER_DESCRIPTION=API para la plataforma de simulación GolazoKings
SWAGGER_VERSION=1.0
SWAGGER_PATH=api/docs